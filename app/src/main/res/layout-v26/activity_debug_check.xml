<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimage"
    android:orientation="vertical"
    tools:context=".DebugCheck">

    <EditText
        android:id="@+id/num1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        android:hint="@string/enter_any_number"
        android:gravity="center"
        android:inputType="number"
        android:background="@color/colorWhile"
        android:autofillHints="" tools:targetApi="o"/>


    <EditText
        android:id="@+id/num2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:hint="@string/enter_any_number"
        android:gravity="center"
        android:inputType="number"
        android:background="@color/colorWhile"
        android:autofillHints="" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/lightGreen"
        android:onClick="addnum"
        android:text="@string/click_to_add"/>

    <TextView
        android:id="@+id/numoutput"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:textSize="50sp"
        android:textColor="@color/colorYellow"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/nxtpg"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/next_page"
        android:textSize="18sp"
        android:textColor="@color/colorYellow"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/lightGreen"
        android:onClick="nxtpg"
        android:layout_marginTop="130dp"/>


    <Button
        android:id="@+id/prevpg"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/prev_page"
        android:textSize="18sp"
        android:textColor="@color/colorYellow"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="30dp"
        android:background="@color/lightGreen"
        android:onClick="prevpg"
        android:layout_marginTop="-50dp" />

</LinearLayout>